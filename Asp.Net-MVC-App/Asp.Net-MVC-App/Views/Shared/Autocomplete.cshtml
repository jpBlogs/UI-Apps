<div class="AutoCompleteRowWrapper" ng-controller="AutocompleteController">
    <div class="row bg-danger" ng-show="error" ng-cloak>
        {{ error }}
    </div>
    <div class="row">
        <div class="col-lg-2"><h4>Search:</h4></div>
        <div class="col-lg-10">
            <input type="text" ng-model="suggestion"
                    placeholder="Name"
                    uib-typeahead="model as model.Value for model in GetSuggestions($viewValue)"
                    class="form-control"
                    typeahead-show-hint="true"
                    typeahead-min-length="2"
                    typeahead-on-select="OnSuggestionSelect($item, $model, $label, $event)">
        </div>
    </div>
</div>
